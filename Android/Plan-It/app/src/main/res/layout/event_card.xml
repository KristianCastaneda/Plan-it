<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/events_list_cv"
        android:layout_margin="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/event_list_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_perm_identity_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_list_name"
                android:text="@string/event_name"
                android:layout_toRightOf="@+id/event_list_photo"
                android:layout_alignParentTop="true"
                android:textSize="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_list_countdown"
                android:text="@string/event_countdown"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="15dp"
                />
            <ImageView
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_list_button_right"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/event_list_countdown"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_thumb_down_red_24dp"
                />
            <ImageView
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_list_button_left"
                android:layout_toLeftOf="@+id/event_list_button_right"
                android:layout_below="@+id/event_list_countdown"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_thumb_up_green_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_list_owner"
                android:text="@string/event_owner"
                android:layout_toRightOf="@+id/event_list_photo"
                android:layout_below="@+id/event_list_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_list_description"
                android:text="@string/event_description"
                android:maxLength="30"
                android:layout_toRightOf="@+id/event_list_photo"
                android:layout_below="@+id/event_list_owner"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
