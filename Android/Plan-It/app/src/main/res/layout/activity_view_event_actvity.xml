<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.plan_it.mobile.plan_it.ViewEventActvity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/tvViewEventTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/ivViewEventImage"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tvViewEventTitle"
        android:layout_alignParentRight="true"
        android:src="@drawable/no_image"
        android:layout_toEndOf="@+id/tvViewEventTo"
        android:layout_toRightOf="@+id/tvViewEventTo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblViewEventDescription"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description:"
        android:layout_below="@id/tvViewEventTitle"
        android:layout_toLeftOf="@id/ivViewEventImage"
        android:layout_alignParentLeft="true"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text New Text New Text New Text New Text New Text New Text New Text New Text New Text"
        android:id="@+id/tvViewEventDescription"
        android:layout_below="@id/lblViewEventDescription"
        android:layout_toLeftOf="@id/ivViewEventImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/lblViewEventLocation"
        android:layout_below="@id/ivViewEventImage"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text, New Text"
        android:id="@+id/tvViewEventLocation"
        android:layout_below="@id/lblViewEventLocation"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="From Date"
        android:id="@+id/tvViewEventFromDate"
        android:layout_toLeftOf="@+id/tvViewEventTo"
        android:layout_below="@+id/tvViewEventLocation"
        android:layout_toStartOf="@id/tvViewEventTo"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TO"
        android:id="@+id/tvViewEventTo"
        android:layout_below="@+id/tvViewEventLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="End Date"
        android:id="@+id/tvViewEventEndDate"
        android:layout_toRightOf="@+id/tvViewEventTo"
        android:layout_below="@+id/tvViewEventLocation"
        android:layout_toEndOf="@id/tvViewEventTo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Who is coming?"
        android:id="@+id/tvWhoIsComing"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvViewEventTo"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstViewAttendees"
        android:layout_below="@+id/tvWhoIsComing"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnViewMsgBoard"
        android:dividerHeight="0.1dp"
        android:divider="#0000CC"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item List"
        android:id="@+id/btnViewItemList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tvViewEventTo"
        android:layout_toStartOf="@+id/tvViewEventTo"
        android:height="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:id="@+id/btnViewMsgBoard"
        android:layout_alignRight="@+id/lstViewAttendees"
        android:layout_alignEnd="@+id/lstViewAttendees"
        android:layout_alignTop="@+id/btnViewItemList"
        android:layout_toRightOf="@+id/tvViewEventTo"
        android:layout_toEndOf="@+id/tvViewEventTo"
        android:height="70dp" />



</RelativeLayout>